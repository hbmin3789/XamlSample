<Window x:Class="XamlSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlSample"
        xmlns:controls="clr-namespace:CustomControls.Controls;assembly=CustomControls"
        xmlns:win="clr-namespace:XamlSample.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid MouseMove="Grid_MouseMove" Background="Black">
        <win:Windows10Button x:Name="btnWin10" Background="#aaaaaa"
                             Width="300" Height="100"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             BorderThickness="10"/>
    </Grid>
</Window>
