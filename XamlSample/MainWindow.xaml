<Window x:Class="XamlSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlSample"
        xmlns:controls="clr-namespace:CustomControls.Controls;assembly=CustomControls"
        xmlns:win="clr-namespace:XamlSample.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid MouseMove="Grid_MouseMove" Background="Black">
        <win:Windows10Button x:Name="btnWin10" Background="#111111"
                             Width="300" Height="100" BorderBrush="Black"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             BorderThickness="3"/>
        <win:Windows10Button x:Name="btnWin10_2" Background="#111111"
                             BorderBrush="Black"
                             Width="300" Height="100" Margin="0,20,0,0"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             BorderThickness="3">
            <RotateTransform3D>
                <RotateTransform3D.Rotation>
                    <AxisAngleRotation3D Axis="0,3,0" Angle="40" />
                </RotateTransform3D.Rotation>
            </RotateTransform3D>
        </win:Windows10Button>
    </Grid>
</Window>
